<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PicoLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PicoLife.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}}"
    TitleColor="{AppThemeBinding Light={StaticResource White}}"
    Title="Pico Life">
    <TabBar>
        <ShellContent Title="Seeds"
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="Seeds" />
        <ShellContent Title="Devices"
                ContentTemplate="{DataTemplate local:DevicesPage}"
                Route="Devices"/>
    </TabBar>
</Shell>
