<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PicoLife.Models"
             xmlns:helpers="clr-namespace:PicoLife.Helpers"
             xmlns:plugin="clr-namespace:Plugin.BLE.Abstractions.Contracts;assembly=Plugin.BLE"
             x:Class="PicoLife.Views.DevicePage"
             x:DataType="models:BleManager"
             Title="Devices">
    <ContentPage.BindingContext>
        <models:BleManager/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Scan" 
                     x:Name="ToolbarStartScan"
                     Clicked="OnScanClicked"/>
        <ToolbarItem Text="Cancel" 
                     x:Name="ToolbarStopScan"
                     Clicked="OnScanStopped"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
        <CollectionView 
                VerticalOptions="Fill"
                ItemsSource="{Binding Devices}"
                SelectionMode="Single"
                SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="plugin:IDevice">
                    <Label Text="{Binding Name}" 
                           Padding="0,5"
                           FontAttributes="Bold"
                           VerticalTextAlignment="Center"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>