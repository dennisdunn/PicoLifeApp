<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PicoLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PicoLife.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Seeds">
            <ShellContent
        Title="Seeds"
        ContentTemplate="{DataTemplate views:SeedListPage}"
        Route="SeedList" />
        </Tab>
        <Tab Title="Devices">
            <ShellContent
        Title="Devices"
        ContentTemplate="{DataTemplate views:DevicePage}"
        Route="Devices" />
        </Tab>
    </TabBar>

</Shell>
